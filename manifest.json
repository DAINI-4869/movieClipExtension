{   
  "manifest_version": 3,
  "name": "netflix movie clipper",
  "version": "1.0.0",
  "description": "movie clipping",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["inject_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "css": ["content_button.css"],
      "js": ["content.js", "config.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.amazon.co.jp/gp/*"],
      "js": ["inject_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.amazon.co.jp/gp/video/detail/*"],
      "css": ["content_button.css"],
      "js": ["contentForAmazonPrime.js", "config.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["playClipNetflix.js"]
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["playClipContent.js"]
    
    }


  ],
  "web_accessible_resources": [
    {
      "matches": ["https://www.netflix.com/*"],
      "resources": ["history_change.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
