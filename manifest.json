{
  "manifest_version": 3,
  "name": "Netflix Movie Clipper",
  "version": "1.0.0",
  "description": "Movie clipping 001",

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["inject_script.js"]
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_idle",
      "css": ["content_button.css"],
      "js": ["config.js", "content.js", "playClipNetflix.js","replaybutton.js"]
    },
    {
      "matches": [
        "https://www.amazon.co.jp/gp/*",
        "https://www.amazon.co.jp/*"
      ],
      "run_at": "document_end",
      "js": ["inject_script.js"]
    },
    {
      "matches": [
        "https://www.amazon.co.jp/gp/*",
        "https://www.amazon.co.jp/*"
      ],
      "run_at": "document_idle",
      "css": ["content_button.css"],
      "js": ["config.js", "contentForAmazonPrime.js"]
    },
    {
      "matches": ["http://localhost:3000/*"],
      "run_at": "document_idle",
      "js": ["playClipContent.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://www.netflix.com/*"],
      "resources": ["history_change.js"]
    }
  ]
}

