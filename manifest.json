{
  "manifest_version": 3,
  "name": "Netflix Movie Clipper",
  "version": "1.0.0",
  "description": "Movie clipping 001",

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["src/inject/inject_script.js"]
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_idle",
      "css": ["src/css/content_button.css"],
      "js": [
        "src/config/config.js",
        "src/content/content.js",
        "src/content/playClipNetflix.js",
        "src/content/replaybutton.js"
      ]
    },
    {
      "matches": [
        "https://www.amazon.co.jp/gp/*",
        "https://www.amazon.co.jp/*"
      ],
      "run_at": "document_end",
      "js": ["src/inject/inject_script.js"]
    },
    {
      "matches": [
        "https://www.amazon.co.jp/gp/*",
        "https://www.amazon.co.jp/*"
      ],
      "run_at": "document_idle",
      "css": ["src/css/content_button.css"],
      "js": [
        "src/config/config.js",
        "src/content/contentForAmazonPrime.js"
      ]
    },
    {
      "matches": ["http://localhost:3000/*"],
      "run_at": "document_idle",
      "js": ["src/content/playClipContent.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["https://www.netflix.com/*"],
      "resources": ["src/util/history_change.js"]
    }
  ]
}
